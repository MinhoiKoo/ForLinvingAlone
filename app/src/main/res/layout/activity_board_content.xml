<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".board.BoardContentActivity"
                android:orientation="vertical">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/boardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="title"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginRight="60dp"/>

                    <ImageButton
                        android:id="@+id/boardDialogBtn"
                        android:src="@drawable/dialogbtn"
                        android:visibility="invisible"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="5dp"/>
                    
                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999999"/>

                <TextView
                    android:id="@+id/boardContent"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:text="content"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#999999"/>

                <TextView
                    android:id="@+id/boardWritedTime"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="writedtime"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="댓글"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

                <ListView
                    android:id="@+id/commentListView"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="#999999" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:layout_alignParentBottom="true">


            <EditText
                android:id="@+id/commentWriteArea"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:hint="댓글을 입력하세요"/>

            <Button
                android:id="@+id/commentWriteBtn"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="입력"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>
    </RelativeLayout>
</layout>